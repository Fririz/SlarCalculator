<Window x:Class="SlarCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlarCalculator"
        mc:Ignorable="d"
        Icon ="/icon.ico"
        MinHeight="300"
        MinWidth="700"
        Title="Slar Calculator" Height="450" Width="800" FontFamily="Verdana" Background="#FF333333" Foreground="#FF48E5C2" RenderTransformOrigin="1,1">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions >
            <RowDefinition Height="30*"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" ShowGridLines="True" Name="TopPanel">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" FontSize="20" Grid.Row="0" Grid.Column="0">Choose size</TextBlock>

            <Grid Grid.Column="1" ShowGridLines="True" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <Button Content="+" Grid.Column="0"  HorizontalAlignment="Stretch" Click="PlusSize"></Button>
                <Button Content="-" Grid.Column="1"  HorizontalAlignment="Stretch" Click="MinusSize"></Button>
            </Grid>

            <TextBlock TextAlignment="Center" VerticalAlignment="Center" FontSize="20" Grid.Row="0" Grid.Column="2" >Choose Method</TextBlock>

            <ComboBox Name="Choose" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                <ComboBoxItem>Метод Гауса</ComboBoxItem>
                <ComboBoxItem>Метод обертання</ComboBoxItem>
                <ComboBoxItem>Метод Гауса-Холецького</ComboBoxItem>
            </ComboBox>
        </Grid>

        <Grid Grid.Row="1" x:Name="SLAR">

        </Grid>

        <Grid Grid.Row="2" x:Name="BottomPanel">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" x:Name="sizeOfMatrix">Size:</TextBlock>
                <Button Grid.Column="1" Click="Calculate"  FontSize="20" Content="Calculate">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>

                </Button>

                <TextBlock Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top">Result:</TextBlock>
            </Grid>
        </Grid>
    </Grid>
</Window>
